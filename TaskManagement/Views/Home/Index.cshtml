@{
    ViewData["Title"] = "Home Page";
}
<section class="hero">
    <div class="container hero-content">
        <h1>Welcome to Task Management App</h1>
        <p>Organize your tasks, boost productivity, and stay on top of your work!</p>
        @if(!User.Identity.IsAuthenticated){
        <a href="/Identity/Account/Login" class="btn btn-primary btn-lg mx-2">Login</a>
            <a href="Identity/Account/Register" class="btn btn-outline-primary btn-lg mx-2">Sign Up</a>
        }
    </div>
</section>
<section class="features text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="icon text-primary">
                    <i class="bi bi-list-check"></i>
                </div>
                <h3>Manage Tasks</h3>
                <p>Create and organize your daily tasks effortlessly.</p>
            </div>
            <div class="col-md-4">
                <div class="icon text-success">
                    <i class="bi bi-bar-chart-line"></i>
                </div>
                <h3>Track Progress</h3>
                <p>Monitor your task completion and track deadlines easily.</p>
            </div>
            <div class="col-md-4">
                <div class="icon text-danger">
                    <i class="bi bi-people"></i>
                </div>
                <h3>Collaborate</h3>
                <p>Share tasks and work with your team in real-time.</p>
            </div>
        </div>
    </div>
</section>
<style>
    .hero {
        background-color: #f8f9fa;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hero-content {
        text-align: center;
    }

    .hero h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .hero p {
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
    }

    .features {
        margin-top: 3rem;
    }

        .features .icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

</style>
